        <Label Content="Separator:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="11,99,0,0" Foreground="White"/>
        <ComboBox x:Name="ItemCases" HorizontalAlignment="Stretch" Height="25" Margin="80,100,11,0" VerticalAlignment="Top" Grid.Column="1" />
        <Label Content="Case:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="37,99,0,0" Foreground="White" Grid.Column="1" RenderTransformOrigin="0.627,0.605"/>
    </Grid>
</Window>
